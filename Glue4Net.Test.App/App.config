<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
    <section name="containerSection" type="Glue4Net.Factory.ContainerSection, Glue4Net.Factory"/>
  </configSections>
  <log4net>
    <!-- Define some output appenders -->
    <appender name="SysAppender" type="log4net.Appender.RollingFileAppender,log4net">
      <param name="File" value="Log/"/>
      <param name="AppendToFile" value="true"/>
      <param name="RollingStyle" value="Date"/>
      <param name="DatePattern" value="&quot;Logs_&quot;yyyyMMdd&quot;.txt&quot;"/>
      <param name="StaticLogFileName" value="false"/>
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n"/>
        <header value="[Begin========================= %date===========================%newline" type="log4net.Util.PatternString" />
        <footer value="[End  ========================= %date===========================%newline"  type="log4net.Util.PatternString" />
      </layout>
    </appender>
    <appender name="ConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR" />
        <foreColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <foreColor value="Green" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="Green" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%newline %date %-5level  %message" />
      </layout>
    </appender>
    <root>
      <level value="ALL"/>
      <appender-ref ref="SysAppender"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>
  </log4net>
  <containerSection xmlns="urn:Glue4Net.Factory">
    <domains>
      <!-- <add name="test"
           compiler="true"
           path="c:\test"
           updateWatch="true"
           watchFilter="*.cs|*.config"/>-->
      <add name="Beetle Tracker"
           compiler="false"
           path="BeetleTracker"
           updateWatch="true"
           watchFilter="*.dll|*.config"/>
    </domains>
  </containerSection>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
